package {{ sdk.namespace | caseDot }}

class Query {
  public static String equal(attribute: String, value: Any) {
    return Query.addQuery(attribute, "equal", value);
  }

  public static String notEqual(attribute: String, value: Any) {
    return Query.addQuery(attribute, "notEqual", value);
  }

  public static String lesser(attribute: String, value: Any) {
    return Query.addQuery(attribute, "lesser", value);
  }

  public static String lesserEqual(attribute: String, value: Any) {
    return Query.addQuery(attribute, "lesserEqual", value);
  }

  public static String greater(attribute: String, value: Any) {
    return Query.addQuery(attribute, "greater", value);
  }

  public static String greaterEqual(attribute: String, value: Any) {
    return Query.addQuery(attribute, "greaterEqual", value);
  }

  public static String contains(attribute: String, value: Any) {
    return Query.addQuery(attribute, "contains", value);
  }

  private static String addQuery(attribute: String, oper: String, value: Any) {
    if (typeof value === "String") {
      return "${attribute}.${oper}(\"${value}\")";
    } else {
      return "${attribute}.${oper}(${value})";
    }
  }
}