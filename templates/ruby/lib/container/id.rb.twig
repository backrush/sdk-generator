require 'securerandom'

def uniqid
  now = Time.now
  seconds_since_epoch = now.to_i
  microseconds_part = now.usec
  hex_timestamp = "%08x%05x" % [seconds_since_epoch, microseconds_part]
  hex_timestamp
end

