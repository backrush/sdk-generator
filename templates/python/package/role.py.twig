class Role:
    @staticmethod
    def any() -> str:
        return 'any'

    @staticmethod
    def user(id, status: str = "") -> str:
        if status:
            return f'user:{id}/{status}'
        return f'user:{id}'

    @staticmethod
    def users(status: str = "") -> str:
        if status:
            return f'users/{status}'
        return 'users'
    
    @staticmethod
    def guests() -> str:
        return 'guests'

    @staticmethod
    def team(id, role: str = "") -> str:
        if role:
            return f'team:{id}/{role}'
        return f'team:{id}'

    @staticmethod
    def member(id) -> str:
        return f'member:{id}'
