language: python

python:
  - "3.8"

before_install:
  - pip uninstall -y urllib3
  - pip install urllib3==1.26.6

jobs:
  include:
    - stage: pypi release
      python: "3.8"
      script: echo "Deploying to pypi ..."
      deploy:
        provider: pypi
        username: "__token__"
        password: $PYPI_TOKEN
        on:
          tags: true