class Query {
  constructor(method, attribute, values) {
    this.method = method
    this.attribute = attribute

    if (values !== undefined) {
      if (Array.isArray(values)) {
        this.values = values
      } else {
        this.values = [values]
      }
    }
  }

  static equal = (attribute, value) => new Query("equal", attribute, value)

  static notEqual = (attribute, value) =>
    new Query("notEqual", attribute, value)

  static lessThan = (attribute, value) =>
    new Query("lessThan", attribute, value)

  static lessThanEqual = (attribute, value) =>
    new Query("lessThanEqual", attribute, value)

  static greaterThan = (attribute, value) =>
    new Query("greaterThan", attribute, value)

  static greaterThanEqual = (attribute, value) =>
    new Query("greaterThanEqual", attribute, value)

  static isNull = attribute => new Query("isNull", attribute)

  static isNotNull = attribute => new Query("isNotNull", attribute)

  static between = (attribute, start, end) =>
    new Query("between", attribute, [start, end])

  static startsWith = (attribute, value) =>
    new Query("startsWith", attribute, value)

  static endsWith = (attribute, value) =>
    new Query("endsWith", attribute, value)

  static select = attributes => new Query("select", undefined, attributes)

  static search = (attribute, value) => new Query("search", attribute, value)

  static orderDesc = attribute => new Query("orderDesc", attribute)

  static orderAsc = attribute => new Query("orderAsc", attribute)

  static cursorAfter = documentId => new Query("cursorAfter", undefined, documentId)

  static cursorBefore = documentId => new Query("cursorBefore", undefined, documentId)

  static limit = limit => new Query("limit", undefined, limit)

  static offset = offset => new Query("offset", undefined, offset)

  static contains = (attribute, value) =>
    new Query("contains", attribute, value)

  static or = (...queries) => {
    return new Query("or", undefined, queries)
  }
}

Query.prototype.toString = function () {
  return JSON.stringify({
    method: this.method,
    attribute: this.attribute,
    values: this.values
  })
} 

module.exports = Query;
