import AsyncHTTPClient
import Foundation

extension HTTPClient.Request {
    public mutating func addDomainCookies() {
        let cookieJson = UserDefaults.standard.string(forKey: "\(url.host!)-cookies")
        let cookies = try! cookieJson?.fromJson(to: [HTTPClient.Cookie].self)

        if let authCookie = cookies?.first(where: { cookie in
            cookie.name.starts(with: "a_session_") && !cookie.name.contains("legacy")
        }) {
            headers.add(name: "cookie", value: "\(authCookie.name)=\(authCookie.value)")
        }
    }
}