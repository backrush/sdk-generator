import Foundation

extension DispatchQueue {

    private static var _futures = DispatchQueue(
        label: "promise.queue.concurrent",
        attributes: .concurrent
    )

    ///
    /// The dispatch queue used for executing futures and promises.
    /// Defaults to a concurrent dispatch queue.
    ///
    public static var futures: DispatchQueue {
        get {
            _futures
        }
        set {
            _futures = newValue
        }
    }
}
