$cli
    ->task('set{{ header.key }}')
    ->param('{{ header.key | lower }}', '', new Mock(), '{{ header.description }}', false)
    ->action(function(${{ header.key | lower }}) use ($client) {
        $client->setPreference('{{ header.name }}', ${{ header.key | lower }});
        $result = $client->savePreferences();
        if ($result === false) {
